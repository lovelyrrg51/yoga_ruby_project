<table border="0" cellpadding="0" cellspacing="0" width="640" style="border-collapse: collapse; margin: auto; font-family: 'Roboto', sans-serif; margin: 15px auto;">
	<tr>
		<td style="padding: 20px 30px; background: #f8f8f8;" colspan="2">
			<table border="0" cellpadding="0" cellspacing="0" style="border-collapse: collapse; width: 100%;">
				<tr>
					<td style="text-align: center;">
						<div style="margin: 20px 0 5px">
							<img src='data:image/png;base64,'/>
							<span style="text-align: center; display: block; color: #666; font-weight: 700; font-size: 22px; margin: 20px 0 0;">Congratulation!</span>
						</div>
						<% if @is_created %>
							<p style="margin: 0 0 30px; color: #909090; font-size: 15px; font-weight: 400;">We are very happy to inform you that your forum is created successfully.</p>
						<% elsif @is_board_member_updated %>
							<p style="margin: 0 0 30px; color: #909090; font-size: 15px; font-weight: 400;">The Board Member details of the forum is successfully updated.</p>
						<% elsif @is_address_updated %>
							<p style="margin: 0 0 30px; color: #909090; font-size: 15px; font-weight: 400;">The Venue Address of the forum is successfully updated.</p>
						<% end %>
						<table style="margin: 40px 0 20px;">
							<tbody>
								<tr>
									<td style="font-size: 14px; text-transform: uppercase; font-weight: 500; color: #333; text-align: left; padding: 0 12px 6px 0;">Forum Name :</td>
									<td style="font-size: 14px; color: #990000; padding: 0 0 6px; text-align: left; font-weight: 500;"><%= @forum.try(:name).try(:capitalize) %></td>
								</tr>
								<tr>
									<td style="font-size: 14px; text-transform: uppercase; font-weight: 500; color: #333; text-align: left; padding: 0 12px 6px 0;">forum id :</td>
									<td style="font-size: 14px; color: #990000; padding: 0 0 6px; text-align: left; font-weight: 500;"><%= @forum.try(:id) %></td>
								</tr>
							</tbody>
						</table>
					</td>
				</tr>
				<tr>
					<td colspan="6"><p style="margin: 20px 0 15px; font-weight: 600;">Board Member Details</p></td>
				</tr>
				<tr>
					<td colspan="6">
						<table cellpadding="0" cellspacing="0" style="border-collapse: collapse; width: 100%;">
							<thead style="font-size: 12px; color: #333; text-transform: uppercase; background: #fff8dc;">
								<tr>
									<th style="padding: 8px 12px; border: 1px solid #ccc; text-align: left;">Sl. No. </th>
									<th style="padding: 8px 12px; border: 1px solid #ccc; text-align: left;">Board Member Position</th>
									<th style="padding: 8px 12px; border: 1px solid #ccc; text-align: left;">SYID</th>
									<th style="padding: 8px 12px; border: 1px solid #ccc; text-align: left;">Name</th>
								</tr>
							</thead>
							<tbody>
								<% @board_members.each_with_index do |board_member, index|%>
									<tr>
										<td style="padding: 10px; border: 1px solid #ccc; font-size: 13px;"><%= index+1 %></td>
										<td style="padding: 10px; border: 1px solid #ccc; font-size: 13px;"><%= board_member.sy_club_user_role.try(:role_name)%></td>
										<td style="padding: 10px; border: 1px solid #ccc; font-size: 13px; color: #990000;"><%= board_member.sadhak_profile.try(:syid) %></td>
										<td style="padding: 10px; border: 1px solid #ccc; font-size: 13px;"><%= board_member.sadhak_profile.try(:full_name)%></td>
									</tr>
								<% end %>
							</tbody>
						</table>
					</td>
				</tr>
				<tr>
					<td colspan="7">
						<div style="margin: 15px 0 15px;">
							<label style="display: block; font-size: 14px; font-weight: 500; color: #a4a4a4;
							text-transform: uppercase;	margin-bottom: 4px;">VENUE</label>
							<p style="font-size: 15px; font-weight: 400; text-transform: capitalize; color: #000;"><%= @forum.try(:full_address) %> </p>
						</div>
						<div style="margin: 0 0 15px;">
							<label style="display: block; font-size: 14px; font-weight: 500; color: #a4a4a4;
							text-transform: uppercase;	margin-bottom: 4px;">Contact Details</label>

							<% if @forum.contact_details.present? %>
						<p><%= "+#{@forum.country_telephone_prefix}-#{@forum.contact_details}" %></p>
						<p style="font-size: 15px; font-weight: 400; text-transform: none; color: #000;"><%= "#{@forum.email}" %></p>
					  <%else%>
						<p style="font-size: 15px; font-weight: 400; text-transform: capitalize; color: #000;">Please write a email to <%= @forum.try(:address).try(:country_id) == 113 ? 'forum@shivyogindia.com' : 'info@absclp.com'%></p>
					  <% end %>

							<p style="margin: 10px 0 0 0;"><a style="margin: 10px 0 0 0; font-size: 15px; text-decoration: underline; cursor: pointer; color: #d2691e;" target="_blank" href="<%= register_sy_club_url(@forum)%>">Registration Link</a></p>
						</div>
					</td>
				</tr>
			</table>
		</td>
	</tr>
</table>