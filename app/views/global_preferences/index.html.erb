<% content_for(:title, 'Admin | Global Preference') %>

<div class="adminCntrl">
<div class="headingtittle-h2 text-center">
    <h2>Admin Panel</h2>
</div>
<div class="row">
    <div class="overflow-row">
        <%= render 'admin/admin_left_panel' %>
        <div class="rightCntrl">
            <div class="boxsection-lg boxsection-xs boxshadow prelative">
                
                <div class="rightContent">
                  <div id="global_preferences">
                      <div class="row">
                          <div class="col-sm-12">
                               <div class="headtittle text-center">
                                  <h2><%= @group_name.titleize%></h2>
                              </div>
                          </div>
                          <% if @global_preferences.present? %>
                            <div class="col-sm-12">
                                <div class="tableCntrl">
                                    <div class="table-responsive tableScrollbar">
                                        <table class="table">
                                            <thead>
                                                <tr>
                                                    <th>Name</th>
                                                    <th class="text-center">Action</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                              <% @global_preferences.each do |global_preference|%>
                                                <tr>
                                                    <td><%= global_preference.alias_name %></td>
                                                    <td class="text-center">
                                                        <%= link_to "", edit_global_preference_path(global_preference), class: "mg-r10 primary-color fa fa-pencil" %>
                                                    </td>
                                                </tr>
                                              <% end %>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                          <% else %>
                            <%= render partial: 'application/no_records', locals: { message: "No #{@group_name.capitalize} Preference Found." } %>
                          <% end %>
                      </div>
                  </div>
                </div>
            </div>
        </div>
    </div>
</div>    
</div>
