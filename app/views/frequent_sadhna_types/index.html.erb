<% content_for(:title, 'Admin | Frequent Sadhna Type') %>

<div class="adminCntrl">
<div class="headingtittle-h2 text-center">
<h2>Admin Panel</h2>
</div>
<div class="row">
<div class="overflow-row">
<%= render 'admin/admin_left_panel' %>
<div class="rightCntrl">
    <div class="boxsection-lg boxsection-xs boxshadow prelative">
 
        <div class="rightContent">
          <div id="frequent_sadhna_types">
              <div class="row">
                  <div class="col-sm-12 mg-b30">
                       <div class="headtittle text-center">
                          <h2>Frequent Sadhna Types</h2>
                      </div>
                  </div>
                  <div class="col-sm-12">
                      <%= render "frequent_sadhna_types/form"%>
                      <a href="#Registercenters" class="refinemenu primary-color" data-toggle="collapse" aria-expanded="true"><i class="fa fa-filter" aria-hidden="true"></i> Refine</a>
                      <div class="refineCntrl collapse in" aria-expanded="true" id="Registercenters" role="tablist">
                        <form action="<%= frequent_sadhna_types_path %>" class="table-screen-next">
                          <div class="refinesub-group">
                              <div class="row">
                                  <div class="col-sm-12">
                                      <div class="outbox">
                                          <label>Search By Name</label>
                                          <div class="box bordered-input">
                                             <div class="dropdown dropdown-field">
                                                <input type="text" class="form-control noBorder field" placeholder="Search name" name="sadhna_name", value="<%= params[:sadhna_name] %>">  
                                             </div>
                                          </div>
                                      </div>
                                  </div>
                                  <div class="col-sm-12">
                                      <div class="pannel-btn text-right">
                                          <%= link_to "CLEAR", frequent_sadhna_types_path, class: 'btn btn-danger mg-r10' %>
                                          <button class="btn btn-info">SEARCH</button>
                                      </div>
                                  </div>
                              </div>
                          </div>
                        </form>
                      </div>
                  </div>
                  <% if @frequent_sadhna_types.present? %>
                    <div class="col-sm-12">
                        <div class="tableCntrl">
                            <div class="table-responsive tableScrollbar">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>Name</th>
                                            <th class="text-center">Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                      <% @frequent_sadhna_types.each do |frequent_sadhna_type|%>
                                        <tr>
                                            <td><%= frequent_sadhna_type.name %></td>
                                            <td class="text-center">
                                                <%= link_to "", edit_frequent_sadhna_type_path(frequent_sadhna_type), class: "mg-r10 primary-color fa fa-pencil" %>
                                                <%= link_to "", frequent_sadhna_type_path(frequent_sadhna_type), method: :delete,data: {confirm: "Are you sure?"}, class: " primary-color fa fa-trash-o"%>
                                            </td>
                                        </tr>
                                      <% end %>
                                    </tbody>
                                </table>
                            </div>
                            <div class="table-pagination">
                                <div class="show-pgnation">
                                    <p class="primarybold"><%= custom_page_entries_info(@frequent_sadhna_types) %></p>
                                </div>
                                <%= paginate @frequent_sadhna_types %>
                            </div>
                        </div>
                    </div>
                  <% else %>
                    <%= render partial: 'application/no_records', locals: {message: 'No Frequent Sadhna Type Found.'} %>
                  <% end %>
              </div>
          </div>
        </div>
    </div>
</div>
</div>
</div>    
</div>
