<% if @message.present? %>

  toastr.error('<%= @message %>.');

<% else %>
  
  var appearance = $("<%= escape_javascript(render(partial: 'sadhak_profile_steps/other_spiritual_associations_fields')) %>");

  $("#sadhak_profile_steps_other_spiritual_associations_fields_tbody").append(appearance);

  toastr.success('Saved successfully.');

  $("#sadhak_profile_step_other_spiritual_association_form").trigger('reset')
                                                            .find("select").trigger("change");

  $('#sadhak_profile_steps_other_spiritual_associations_save_cont_button').removeAttr("disabled");

<% end %>
