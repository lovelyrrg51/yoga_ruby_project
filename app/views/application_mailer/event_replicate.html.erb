<tr>
    <td style="padding: 20px 30px; background: #f8f8f8;" colspan="2">
        <table border="0" cellpadding="0" cellspacing="0" style="border-collapse: collapse; width: 100%;">
            <tr>
                <td style="text-align: center;">
                  <div style="margin: 20px auto 5px; width: 64px; height: 64px; border-radius: 50%; overflow: hidden;">
                    <img src='data:image/png;base64,'/>
                  </div>
                    <span style="text-align: center; display: block; color: #666; font-weight: 700; font-size: 22px; margin: 20px 0 5px;">Namah Shivay <%= @options[:sadhak_profile].try(:full_name) %></i></span>
                    <p style="margin: 0 0 30px; color: #909090; font-size: 15px; font-weight: 400;">Please find links to the created events below</p>
                </td>
            </tr>
            <tr>
                <td colspan="5"><p style="margin: 30px 0 15px; font-weight: 600;">Event List</p></td>
            </tr>
            <tr>
              <td colspan="5">
                <table cellpadding="0" cellspacing="0" style="border-collapse: collapse; width: 100%; margin: 0 0 30px;">
                  <tbody>
                    <% if @options[:events].size > 0 %>
                      <% @options[:events].each do |event| %>
                        <tr>
                            <td style="padding: 10px; border: 1px solid #ccc;"><a href=<%= shivir_details_event_url(event) %> style="display: block; font-size: 14px; color: #990000;"><%= event.event_name_with_location %></a></td>
                        </tr>
                      <% end %>
                    <% else %>
                      <tr>
                        <td style="padding: 10px; border: 1px solid #ccc;"><b>No event replicated.</b></td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
              </td>
            </tr>
        </table>
    </td>
</tr>