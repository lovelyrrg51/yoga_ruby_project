<% payment = @options[:payment] %>
<% gateway = @options[:gateway] %>
<% event_order = @options[:event_order] %>
<% line_items = @options[:line_items] %>
<% is_fresh_order = @options[:is_fresh_order] %>
<% if payment.present? and gateway.present? and event_order.present? %>
  <tr>
    <td style="padding: 20px 30px; background: #f8f8f8;" colspan="2">
        <table border="0" cellpadding="0" cellspacing="0" style="border-collapse: collapse; width: 100%;">
            <tr>
                <td style="text-align: center;">
                  <div style="margin: 20px 0 5px">
                    <img src='data:image/png;base64,'/>
                    <span style="text-align: center; display: block; color: #666; font-weight: 700; font-size: 22px; margin: 20px 0 0;">
                    <% if payment.present? and gateway.present? %>
                      <% if is_fresh_order %>
                        Registration Successful
                      <% else %>
                        Registration Updated
                      <% end %>
                    <% else %>
                      Something went wrong.
                    <% end %>
                    </span>
                  </div>
                  <p style="margin: 0 0 30px; color: #909090; font-size: 15px; font-weight: 400;">Please find the details regarding registration(s)</p>
                  <table style="margin: 40px 0 20px;">
                    <tbody>
                      <tr>
                        <td style="font-size: 14px; text-transform: uppercase; font-weight: 500; color: #333; text-align: left; padding: 0 12px 6px 0;">Event Name :</td>
                        <td style="font-size: 14px; color: #990000; padding: 0 0 6px; text-align: left; font-weight: 500;"><%= event_order.event.try(:event_name_with_location) %></td>
                      </tr>
                      <tr>
                        <td style="font-size: 14px; text-transform: uppercase; font-weight: 500; color: #333; text-align: left; padding: 0 12px 6px 0;">Transaction id :</td>
                        <td style="font-size: 14px; color: #990000; padding: 0 0 6px; text-align: left; font-weight: 500;"><%= payment.try(:transaction_number) %></td>
                      </tr>
                    </tbody>
                  </table>
                </td>
            </tr>
            <tr>
                <td colspan="6"><p style="margin: 20px 0 15px; font-weight: 600;">Sadhak Profiles</p></td>
            </tr>
            <tr>
                <td colspan="6">
                  <table cellpadding="0" cellspacing="0" style="border-collapse: collapse; width: 100%;">
                    <thead style="font-size: 12px; color: #333; text-transform: uppercase; background: #fff8dc;">
                      <tr>
                        <th style="padding: 8px 12px; border: 1px solid #ccc; text-align: left;">Sl. No.</th>
                        <th style="padding: 8px 12px; border: 1px solid #ccc; text-align: left;">Reg. No.</th>
                        <th style="padding: 8px 12px; border: 1px solid #ccc; text-align: left;">Name / SYID</th>
                        <th style="padding: 8px 12px; border: 1px solid #ccc; text-align: left;">Seating Category</th>
                        <th style="padding: 8px 12px; border: 1px solid #ccc; text-align: left;">Status</th>
                        <th style="padding: 8px 12px; border: 1px solid #ccc; text-align: left;">Remarks <sup style="color: #990000; font-size: 15px;">*</sup></th>
                      </tr>
                    </thead>
                    <tbody>
                      <% line_items.each_with_index do |line_item, index| %>
                        <tr>
                            <td style="padding: 10px; border: 1px solid #ccc; font-size: 13px;"><%= index+1 %></td>
                            <td style="padding: 10px; border: 1px solid #ccc; font-size: 13px;"><%=(line_item.event_registration.try(:serial_number).to_i + 100)%></td>
                            <td style="padding: 10px; border: 1px solid #ccc; font-size: 13px;">
                                <p style="display: block; font-weight: 500;"><%= line_item.sadhak_profile.try(:full_name).try(:titleize) %></p>
                                <span style="display: block; font-weight: 500; font-size: 12px; color: #990000;"><%= line_item.sadhak_profile.try(:syid) %></span>
                            </td>
                            <td style="padding: 10px; border: 1px solid #ccc; font-size: 13px;"><%= line_item.event_seating_category_association.try(:seating_category).try(:category_name).try(:titleize) || "NA" %></td>
                            <td style="padding: 10px; border: 1px solid #ccc; font-size: 13px;"><%= EventOrder.template_status_mapper[line_item.status] %></td>
                            <% if line_item.sadhak_profile.profile_photo_status == 'pp_success' and line_item.sadhak_profile.photo_id_status == 'pi_success' && false%>
                              <td style="padding: 10px; border: 1px solid #ccc; font-size: 13px; color: #008000;">
                                Please print the attached entry card
                              </td>
                            <% else %>
                              <td style="padding: 10px; border: 1px solid #ccc; font-size: 13px;">
                                <a href=<%= "#{Rails.application.config.app_base_url}/v1/sadhak_profiles/#{line_item.sadhak_profile.slug}/edit" %> style="color: #990000;">Click here</a> to update your photo and photo ID proof.
                              </td>
                            <% end %>
                        </tr>
                      <% end %>
                    </tbody>
                  </table>
                </td>
            </tr>
            <tr>
              <td colspan="7">
                <p style="margin: 40px 0 15px; font-weight: 600;">Event Registration Details</p>
                <table border="0" cellpadding="0" cellspacing="0" style="border-collapse: collapse; width: 100%; margin: 0 0 30px;">
                  <thead style="font-size: 12px; color: #333; text-transform: uppercase; background: #fff8dc;">
                    <tr>
                      <th style="padding: 8px 12px; border: 1px solid #ccc; text-align: left;"><%= event_order.event.product? ? 'Product' : 'Event' %> </th>
                      <th style="padding: 8px 12px; border: 1px solid #ccc; text-align: left;"><%= event_order.event.product? ? 'Product Expiry Date' : 'Event Start Date' %> </th>
                      <th style="padding: 8px 12px; border: 1px solid #ccc; text-align: left;"><%= event_order.event.product? ? 'Product Expiry Date' : 'Event End Date' %> </th>
                      <th style="padding: 8px 12px; border: 1px solid #ccc; text-align: left;">Registration Reference No. </th>
                      <th style="padding: 8px 12px; border: 1px solid #ccc; text-align: left;">Payment Method </th>
                      <th style="padding: 8px 12px; border: 1px solid #ccc; text-align: left;">Payment Status </th>
                      <th style="padding: 8px 12px; border: 1px solid #ccc; text-align: left;">Total Amount Paid </th>
                    </tr>
                  </thead>
                  <tbody>
                    <tr>
                        <td style="padding: 10px; border: 1px solid #ccc; font-size: 13px;"><%= event_order.event.try(:event_name_with_location) %></td>
                        <td style="padding: 10px; border: 1px solid #ccc; font-size: 13px;"><%= event_order.event.event_start_date.try(:strftime, "%b, %d %Y") %></td>
                        <td style="padding: 10px; border: 1px solid #ccc; font-size: 13px;"><%= event_order.event.event_end_date.try(:strftime, "%b, %d %Y") %></td>
                        <td style="padding: 10px; border: 1px solid #ccc; font-size: 13px; color: #990000"><%= event_order.try(:reg_ref_number) %></td>
                        <td style="padding: 10px; border: 1px solid #ccc; font-size: 13px;"><%= event_order.payment_method %></td>
                        <td style="padding: 10px; border: 1px solid #ccc; font-size: 13px; color: #008000;"><%= EventOrder.payment_status_mapper[payment.status] %></td>
                        <td style="padding: 10px; border: 1px solid #ccc; font-size: 13px; font-weight: 600;"><b><%= event_order.event.try(:currency_code) %> <%= '%.2f' % payment.amount.to_f.round(2) %></td>
                    </tr>
                      <tr>
                          <td colspan="5" style="padding: 10px; border: 1px solid #ccc; font-size: 14px; font-weight: 600; text-align: center;">Net Amount</td>
                          <td colspan="2" style="padding: 10px; border: 1px solid #ccc; font-size: 16px; font-weight: 600; text-align: center;"><b><%= event_order.event.try(:currency_code) %> <%= '%.2f' % payment.amount.to_f.round(2) %></td>
                      </tr>
                  </tbody>
                </table>
              </td>
            </tr>
            <tr>
                <td style="font-size: 15px; font-weight: 500;">Note:<sup style="color: #990000; font-size: 15px;">*</sup> </td>
            </tr>
            <tr>
                <td>
                  <% photo_and_photo_id_statuses = line_items.collect{|item| item.sadhak_profile.profile_photo_status == 'pp_success' && item.sadhak_profile.photo_id_status == 'pi_success'} %>
                  <% if photo_and_photo_id_statuses.include?(true)  && false%>
                    <p style="font-size: 15px; margin: 20px 0 10px;">Please print the attached entry card and bring it along with your original photo ID proof</p>
                  <% end %>
                  <% if photo_and_photo_id_statuses.include?(false) %>
                    <p style="font-size: 15px; margin: 0 0 10px;">Your photo and photo ID is under approval. Please make sure that you have uploaded your correct photo and photo ID proof. In case your photo and photo ID is not approved then you will be not be allowed entry into the shivir. In case you wish to update your photo and photo ID proof then please login to your SYID profile in <a href=<%= Rails.application.config.app_base_url %> style="color: #990000; text-decoration: underline;"><%= Rails.application.config.app_base_url %></a>.<!--  Once photo and photo ID is approved you will receive a confirmation email --></p>
                    <!--  after which you can download the entry card by logging into your SYID profile. -->
                  <% end %>
                </td>
            </tr>
        </table>
    </td>
  </tr>
<% else %>
  <tr>
    Either payment is missing or event order is missing.
  </tr>
<% end %>