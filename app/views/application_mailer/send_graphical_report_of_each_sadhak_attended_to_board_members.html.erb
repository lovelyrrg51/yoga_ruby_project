 <table border="0" cellpadding="0" cellspacing="0" width="100%" align="center" style="margin-top:10px;">
    <tr>
        <td style="background-color: #ebebeb; padding:15px; border: 1px solid #000; border-radius: 10px;">
            <%= @options[:h2_message] %>
        </td>
    </tr>
</table>

<table border="0" cellpadding="0" cellspacing="0" width="100%" align="center" style="margin-top:10px;">
    <% if @options[:data].present? %>
      <% (@options[:data] || []).in_groups_of(2, false) do |g| %>
        <tr>
          <% g.each_with_index do |d, i| %>
            <td align=<%= i%2 == 0 ? "left" : "right" %>>
              <img src="<%= d %>" height="189" width="296">
            </td>
          <% end %>
        </tr>
      <% end %>
    <% else %>
      <tr>
        <td>
            No Data found.
        </td>
      </tr>
    <% end %>
</table>