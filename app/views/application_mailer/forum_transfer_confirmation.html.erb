<% success = (@options[:success] || []) %>
<tr>
    <td style="padding: 20px 30px; background: #f8f8f8;" colspan="2">
        <table border="0" cellpadding="0" cellspacing="0" style="border-collapse: collapse; width: 100%;">
          <% if success.present? %>
            <tr>
                <td style="text-align: center;">
                  <div style="margin: 20px 0 5px">
                    <img src='data:image/png;base64,'/>
                    <span style="text-align: center; display: block; color: #666; font-weight: 700; font-size: 22px; margin: 20px 0 0;">Forum Membership Transfer Status</span>
                  </div>
                  <p style="margin: 0 0 30px; color: #909090; font-size: 15px; font-weight: 400;">Please find the details regarding Forum Transfer</p>
                </td>
            </tr>
            <tr>
                <td colspan="6"><p style="margin: 20px 0 15px; font-weight: 600;">Forum Transferred Members</p></td>
            </tr>
            <tr>
              <td colspan="6">
                <table cellpadding="0" cellspacing="0" style="border-collapse: collapse; width: 100%;">
                  <thead style="font-size: 12px; color: #333; text-transform: uppercase; background: #fff8dc;">
                    <tr>
                      <th style="padding: 8px 12px; border: 1px solid #ccc; text-align: left;">S.No.</th>
                      <th style="padding: 8px 12px; border: 1px solid #ccc; text-align: left;">Name / SYID</th>
                      <th style="padding: 8px 12px; border: 1px solid #ccc; text-align: left;">Previous Forum</th>
                      <th style="padding: 8px 12px; border: 1px solid #ccc; text-align: left;">Current Forum</th>
                      <th style="padding: 8px 12px; border: 1px solid #ccc; text-align: left;">Membership Expires On</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% success.each_with_index do |info, index| %>
                      <% sadhak_profile = SadhakProfile.find_by(syid: info[:syid]) %>
                      <tr>
                        <td style="padding: 10px; border: 1px solid #ccc; font-size: 13px;"><%= index+1 %></td>
                        <td style="padding: 10px; border: 1px solid #ccc; font-size: 13px;">
                                    <p style="display: block; font-weight: 500;"><%= sadhak_profile.try(:full_name) %></p>
                                    <span style="display: block; font-weight: 500; font-size: 12px; color: #990000;"><%= sadhak_profile.try(:syid) %></span>
                                </td>
                        <td style="padding: 10px; border: 1px solid #ccc; font-size: 13px;"><%= info[:from_club] %></td>
                        <td style="padding: 10px; border: 1px solid #ccc; font-size: 13px;"><%= info[:to_club] %></td>
                        <td style="padding: 10px; border: 1px solid #ccc; font-size: 13px;"><%= info[:expiration_date] %></td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
              </td>
            </tr>
          <% else %>
            <tr>
                <td style="text-align: center;">
                  <div style="margin: 20px 0 5px">
                    <span style="text-align: center; display: block; color: #666; font-weight: 700; font-size: 22px; margin: 20px 0 0;">Something went wrong.</span>
                  </div>
                  <p style="margin: 0 0 30px; color: #909090; font-size: 15px; font-weight: 400;">Please contact ashram.</p>
                </td>
            </tr>
          <% end %>
        </table>
    </td>
</tr>