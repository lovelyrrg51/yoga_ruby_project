<% links = @options[:links] %>
<tr>
  <td style="padding: 20px 30px; background: #f8f8f8;" colspan="2">
    <table border="0" cellpadding="0" cellspacing="0" style="border-collapse: collapse; width: 100%;">
      <tbody>
          <tr>
              <td style="text-align: center;">
              	<div style="margin: 20px auto 0; width: 120px; height: 120px; border-radius: 50%; overflow: hidden;">
              		<img src="https://s3.amazonaws.com/syportalattachments/email_template_images/babaji_thumbnail.png">
              	</div>
                  <span style="text-align: center; display: block; color: #666; font-weight: 700; font-size: 22px; margin: 20px 0 5px;">Namah Shivay, <%= @options[:sadhak_profile].try(:full_name) || 'Guest' %></span>
                  <% if links.present? %>
              			<p style="margin: 0 0 30px; color: #909090; font-size: 15px; font-weight: 400;">Please find links to download the result (vaild only for 1 day)</p>
              			<%end%>
              </td>
          </tr>
          <% if links.present? %>
	          <% links.each do |name, link| %>
			          <tr>
			              <td colspan="5">
			                  <a href="<%= link%>" style="margin: 15px 0; text-align: left; display: block; text-decoration: underline; color: #990000; cursor: pointer;"><%= name%>
			                  	
			                  </a>
		                </td>
			          </tr>
	          <%end%>
          <%else%>
	        		<tr>
	              	<td colspan="5">
		                  <p style="margin: 15px 0; text-align: left; display: block; text-decoration: underline; color: #990000; cursor: pointer;">Something went wrong while processing your request. Please see below tasks status and error message.<%= name%></p>
		              </td>
	            </tr>        		

					    <% @options[:sub_tasks].each_with_index do |st, i| %>
			            <tr>
			              	<td colspan="5">
				                  <p style="margin: 15px 0; text-align: left; display: block; text-decoration: underline; color: #990000; cursor: pointer;">Task<%= i %>: Status: <%= st.status %>, Error Message: <%= st.message %></p>
				              </td>
		            </tr>
	            <%end%>
          <%end%>
          <tr>
              <td colspan="5">
                  <div style="margin: 15px 0; text-align: left; font-size: 15px;">
                      <a href="<%="#{Rails.application.config.app_base_url}"%>" style="text-decoration: underline; color: #990000; cursor: pointer;">Click here</a> to visit our website
                  </div>
              </td>
          </tr>
      </tbody>
    </table>
  </td>
</tr>
