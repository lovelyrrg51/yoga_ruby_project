<% content_for(:title, 'Registration Center') %>
  <div class="adminCntrl">
      <div class="headingtittle-h2 text-center">
          <h2>Admin Panel</h2>
      </div>
      <div class="row">
          <div class="overflow-row">
              <%= render 'admin/admin_left_panel' %>
                  <div class="rightCntrl">
                      <div class="boxsection-lg boxsection-xs boxshadow prelative">
                          <div class="rightContent">
                              <div id="registration_centers">
                                  <div class="row">
                                      <div class="col-sm-12 mg-b30">
                                          <div class="headtittle text-center">
                                              <h2>Registration Centers</h2>
                                          </div>
                                      </div>
                                      <div class="col-sm-12">
                                          <%= render "registration_centers/form_for_admin_tab" %>
                                              <a href="#Registercenters" class="refinemenu primary-color" data-toggle="collapse" aria-expanded="true"><i class="fa fa-filter" aria-hidden="true"></i> Refine</a>
                                              <div class="refineCntrl collapse in" aria-expanded="true" id="Registercenters" role="tablist">
                                                  <form action="<%= index_for_admin_registration_centers_path %>">
                                                      <div class="refinesub-group">
                                                          <div class="row">
                                                              <div class="col-sm-12">
                                                                  <div class="outbox">
                                                                      <label>Search By Name</label>
                                                                      <div class="box bordered-input">
                                                                          <div class="dropdown dropdown-field">
                                                                              <input type="text" class="form-control noBorder field" placeholder="Search name" name="registration_center_name" value="<%= params[:registration_center_name]%>">
                                                                          </div>
                                                                      </div>
                                                                  </div>
                                                              </div>
                                                              <div class="col-sm-12">
                                                                  <div class="pannel-btn text-right">
                                                                      <%= link_to "CLEAR", index_for_admin_registration_centers_path, class: 'btn btn-danger mg-r10' %>
                                                                          <button class="btn btn-info">SEARCH</button>
                                                                  </div>
                                                              </div>
                                                          </div>
                                                      </div>
                                                  </form>
                                              </div>
                                      </div>
                                      <% if @registration_centers.present? %>
                                          <div class="col-sm-12">
                                              <div class="tableCntrl">
                                                  <div class="table-responsive tableScrollbar">
                                                      <table class="table">
                                                          <thead>
                                                              <tr>
                                                                  <th>Name</th>
                                                                  <th class="text-center">Action</th>
                                                              </tr>
                                                          </thead>
                                                          <tbody>
                                                              <% @registration_centers.each do |registration_center|%>
                                                                  <tr>
                                                                      <td>
                                                                          <%= registration_center.name %>
                                                                      </td>
                                                                      <td class="text-center">
                                                                          <a href="<%= edit_for_admin_registration_center_path(registration_center) %>" class="mg-r10 primary-color"><i class="fa fa-pencil" aria-hidden="true"></i></a>
                                                                          <%= link_to "", destroy_for_admin_registration_center_path(registration_center), method: :delete, data: { confirm: "Are you sure?" },   class: " primary-color fa fa-trash-o" %>
                                                                      </td>
                                                                  </tr>
                                                                  <% end %>
                                                          </tbody>
                                                      </table>
                                                  </div>
                                                  <div class="table-pagination">
                                                      <div class="show-pgnation">
                                                          <p class="primarybold">
                                                              <%= custom_page_entries_info(@registration_centers) %>
                                                          </p>
                                                      </div>
                                                      <%= paginate @registration_centers %>
                                                  </div>
                                              </div>
                                          </div>
                                          <% else %>
                                              <%= render partial: 'application/no_records', locals: {message: 'No Registration Center Found.'} %>
                                                  <% end %>
                                  </div>
                              </div>
                          </div>
                      </div>
                  </div>
          </div>
      </div>
  </div>