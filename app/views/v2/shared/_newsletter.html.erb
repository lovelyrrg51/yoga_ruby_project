<section id="newsletter" class="margin-bottom-0">
  <div class="container">
    <div class="row m-b-30">
      <div class="col-sm-12">
        <div class="heading_subtitle text-align-center">SUBSCRIBE TO OUR NEWSLETTER</div>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-3"></div>
      <div class="col-sm-6">
        <div class="newsletter_form">

          <%= form_for :email_subscription, url: v2_create_email_subscription_path, method: :post, remote: true, html: { id: "email_subscription" } do |f| %>
            <div class="input-group md-form">
              <%= f.email_field :email, class: "form-control white-bg input-border-bottom", id: "subscribe_newsletter", required: :required %>
              <label class="subscribe_newsletter_input_label" for="subscribe_newsletter">Enter Your Email</label>
              <div class="input-group-append">
                <button type="submit" class="btn_textbox_submit btn-block bg-red waves-effect">Subscribe</button>
              </div>
            </div>
          <% end %>
        </div>
      </div>
      <div class="col-sm-3"></div>
    </div>
  </div>
</section>
<div id="email_subscription_message"></div>
