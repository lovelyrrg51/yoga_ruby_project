<% if flash.present?  %>
  $("#upgrade_registration").modal('hide');
  $('.flash-message').html("<%= escape_javascript(render partial: 'layouts/v2/flash_messages') %>");
  <% flash.clear %>
  <% else %>
  $("#transfer_event").hide(500);
  $("#upgrade_registration").modal('hide');
  $('.modal-backdrop').remove();
  $("#registration_action_proceed_btn").removeAttr("data-toggle");
  $("#registration_action_proceed_btn").removeAttr("data-target");
  $("#registration_action_proceed_btn").attr("data-toggle","modal");
  $("#registration_action_proceed_btn").attr("data-target","#upgrade_summary_before_after");
  $("#payment_mode_details_div").html("<%= escape_javascript(render partial: 'process_event_order_confirmation', locals: {event_order: @event_order, before_sadhak_details: @before_sadhak_details, after_sadhak_details: @after_sadhak_details, action: @action}) %>");
  $("#upgrade_summary_before_after").modal('show');
<% end %>