<div class="container">
  <% flash.each do |type, msg| %>
    <div class="alert <%= bootstrap_class_for_flash(type) %> alert-dismissable fade show">
      <%= msg.html_safe %>
      <button class="close" data-dismiss="alert" style="margin-right: 45px;font-size: 20px;margin-top: 13px;">x</button>
    </div>
  <% end %>
</div>
