<div id="show_payment_reject_request_modal" class="modal fade Custommodal" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h2 class="headtittle">Cancel Registration Changes Request</h2>
        <button type="button" class="btn btn-info btnclose" data-dismiss="modal"><%= image_tag("close.png") %></button>
      </div>
      <%= form_for :payment_refund, url: @redirect_url, method: :put do |f| %>
      <div class="modal-body rejectlist mCustomScrollbar">
            <div class="row mg-t30">
                <div class="col-sm-12">
                    <label class="mg-b20 nouppercase">Do you want to cancel registration change request of reference number <span class="primary-color"><%= @reg_ref_number %></span> ?</label>
                    <%= f.hidden_field :status, value: PaymentRefund.statuses.key(PaymentRefund.statuses[:request_cancelled]) %>
                </div>
            </div>
      </div>
      <div class="modal-footer">
        <div class="pannel-btn mg-t20 text-right">
          <button type="button" class="btn btn-danger" data-dismiss="modal">CANCEL</button>
            <%= f.submit "SAVE", class: "btn btn-info", data: { disable_with: "SAVING...!" } %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>