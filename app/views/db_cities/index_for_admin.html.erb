<% content_for(:title, 'City') %>

<div class="adminCntrl">
	<div class="headingtittle-h2 text-center">
		<h2>Admin Panel</h2>
	</div>
	<div class="row">
		<div class="overflow-row">
			<%= render 'admin/admin_left_panel' %>
			<div class="rightCntrl">
			    <div class="boxsection-lg boxsection-xs boxshadow prelative">
			        <div class="rightContent">
			          <div id="db_cities">
			              <div class="row">
			                  <div class="col-sm-12 mg-b30">
			                       <div class="headtittle text-center">
			                          <h2>Cities</h2>
			                          <span class="subheading"><%= @db_state.try(:country).try(:name) %> / <%= @db_state.try(:name) %> / cities</span>
			                      </div>
			                  </div>
			                  <div class="col-sm-12">
			                      <%= render "db_cities/form"%>
			                      <a href="#Registercenters" class="refinemenu primary-color" data-toggle="collapse" aria-expanded="true"><i class="fa fa-filter" aria-hidden="true"></i> Refine</a>
			                      <div class="refineCntrl collapse in" aria-expanded="true" id="Registercenters" role="tablist">
			                        <form action="<%= index_for_admin_db_country_db_state_db_cities_path(@db_country,@db_state) %>" class="table-screen-next">
			                          <div class="refinesub-group">
			                              <div class="row">
			                                  <div class="col-sm-12">
			                                      <div class="outbox">
			                                          <label>Search By City Name</label>
			                                          <div class="box bordered-input">
			                                             <div class="dropdown dropdown-field">
			                                                <input type="text" class="form-control noBorder field" placeholder="Search name" name="city_name", value="<%= params[:city_name] %>">  
			                                             </div>
			                                          </div>
			                                      </div>
			                                  </div>
			                                  <div class="col-sm-12">
			                                      <div class="pannel-btn text-right">
			                                          <%= link_to "CLEAR", index_for_admin_db_country_db_state_db_cities_path(@db_country,@db_state), class: 'btn btn-danger mg-r10' %>
			                                          <button class="btn btn-info">SEARCH</button>
			                                      </div>
			                                  </div>
			                              </div>
			                          </div>
			                        </form>
			                      </div>
			                  </div>
			                  <% if @db_cities.present? %>
			                    <div class="col-sm-12">
			                        <div class="tableCntrl">
			                            <div class="table-responsive tableScrollbar">
			                                <table class="table">
			                                    <thead>
			                                        <tr>
			                                            <th>Name</th>
			                                            <th class="text-center">Action</th>
			                                        </tr>
			                                    </thead>
			                                    <tbody>
			                                      <% @db_cities.each do |db_city|%>
			                                        <tr>
			                                            <td><%= db_city.name %></td>
			                                            <td class="text-center">
			                                                <%= link_to "", edit_db_country_db_state_db_city_path(@db_country, @db_state, db_city), class: "mg-r10 primary-color fa fa-pencil" %>
			                                                <%= link_to "", db_country_db_state_db_city_path(@db_country, @db_state, db_city), method: :delete,data: {confirm: "Are you sure?"}, class: " primary-color fa fa-trash-o"%>
			                                            </td>
			                                        </tr>
			                                      <% end %>
			                                    </tbody>
			                                </table>
			                            </div>
			                            <div class="table-pagination">
			                                <div class="show-pgnation">
			                                    <p class="primarybold"><%= custom_page_entries_info(@db_cities) %></p>
			                                </div>
			                                <%= paginate @db_cities %>
			                            </div>
			                        </div>
			                    </div>
			                  <% else %>
			                    <%= render partial: 'application/no_records', locals: {message: 'No City Found.'} %>
			                  <% end %>
			              </div>
			          </div>
			        </div>
			    </div>
			</div>
		</div>
	</div>    
</div>
