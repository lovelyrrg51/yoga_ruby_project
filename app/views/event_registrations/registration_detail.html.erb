<div class="modal fade modal-vertical-centered trstion_modal in" id="registrationDetails" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="false" style="display: block;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="headtittle text-colorRed modalHeading">Transaction Detail</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">Ã—</span></button>
            </div>
            <div class="modal-body mCustomScrollbar">
                <div class="groupBlock row">
                    <label class="col-sm-6 col-xs-6">Transaction ID:</label>
                    <label class="col-sm-6 col-xs-6"><%= @event_registration.event_order.transaction_id %></label>
                </div>
                <div class="groupBlock row">
                    <label class="col-sm-6 col-xs-6">Reference Number :</label>
                    <label class="col-sm-6 col-xs-6"><%= @event_registration.event_order.reg_ref_number%></label>
                </div>
                  <div class="groupBlock row">
                    <label class="col-sm-6 col-xs-6">Payment Type:</label>
                    <label class="col-sm-6 col-xs-6"><%= @event_registration.event_order.payment_method %></label>
                </div>
                  <div class="groupBlock row">
                    <label class="col-sm-6 col-xs-6">User:</label>
                    <label class="col-sm-6 col-xs-6"><%= @event_registration.sadhak_profile.first_name %></label>
                </div>
                <div class="groupBlock row">
                    <label class="col-sm-6 col-xs-6">Status:</label>
                    <label class="col-sm-6 col-xs-6 text-colorGreen"><%= @event_registration.status %></label>
                </div>     
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">CANCEL</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div>

<script type="text/javascript">
$(document).ready(function() {
$('#registrationDetails').modal('show');
});
</script>

