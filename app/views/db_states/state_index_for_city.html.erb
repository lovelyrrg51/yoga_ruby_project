<% content_for(:title, 'City') %>
<div class="adminCntrl">
    <div class="headingtittle-h2 text-center">
        <h2>Admin Panel</h2>
    </div>
    <div class="row">
        <div class="overflow-row">
            <%= render 'admin/admin_left_panel' %>
                <div class="rightCntrl">
                    <div class="boxsection-lg boxsection-xs boxshadow prelative">
                        <div class="rightContent">
                            <div id="state_type">
                                <div class="row">
                                    <div class="col-sm-12 mg-b30">
                                        <div class="headtittle text-center">
                                            <h2>States</h2>
                                            <span class="subheading">Please Select a state to view cities.</span>
                                        </div>
                                    </div>
                                    <div class="col-sm-12">
                                        <a href="#Registercenters" class="refinemenu primary-color" data-toggle="collapse" aria-expanded="true"><i class="fa fa-filter" aria-hidden="true"></i> Refine</a>
                                        <div class="refineCntrl collapse in" aria-expanded="true" id="Registercenters" role="tablist">
                                            <form action="<%= state_index_for_city_db_country_db_states_path(@db_country) %>" class="table-screen-next">
                                                <div class="refinesub-group">
                                                    <div class="row">
                                                        <div class="col-sm-12">
                                                            <div class="outbox">
                                                                <label>Search By State Name</label>
                                                                <div class="box bordered-input">
                                                                    <div class="dropdown dropdown-field">
                                                                        <input type="text" class="form-control noBorder field" placeholder="Search name" name="state_name" , value="<%= params[:state_name]%>">
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="col-sm-12">
                                                            <div class="pannel-btn text-right">
                                                                <%= link_to "CLEAR", state_index_for_city_db_country_db_states_path(@db_country), class: 'btn btn-danger mg-r10' %>
                                                                    <button class="btn btn-info">SEARCH</button>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                    <% if @db_states.present? %>
                                        <div class="col-sm-12">
                                            <div class="tableCntrl">
                                                <div class="table-responsive tableScrollbar">
                                                    <table class="table">
                                                        <thead>
                                                            <tr>
                                                                <th>Name</th>
                                                                <th class="text-center">Action</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            <% @db_states.each do |db_state|%>
                                                                <tr>
                                                                    <td>
                                                                        <%= db_state.name %>
                                                                    </td>
                                                                    <td class="text-center">
                                                                        <%= link_to "", index_for_admin_db_country_db_state_db_cities_path(@db_country, db_state), class: "mg-r10 primary-color fa fa-pencil" %>
                                                                    </td>
                                                                </tr>
                                                                <% end %>
                                                        </tbody>
                                                    </table>
                                                </div>
                                                <div class="table-pagination">
                                                    <div class="show-pgnation">
                                                        <p class="primarybold">
                                                            <%= custom_page_entries_info(@db_states) %>
                                                        </p>
                                                    </div>
                                                    <%= paginate @db_states %>
                                                </div>
                                            </div>
                                        </div>
                                        <% else %>
                                            <%= render partial: 'application/no_records', locals: {message: 'No State Found.'} %>
                                        <% end %>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
        </div>
    </div>
</div>